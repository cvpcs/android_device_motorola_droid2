set_progress(1.000000);
ui_print("Tanzanite 1.1.5 Installer");
ui_print("  by CVPCS");

ui_print("Beginning installation...");

ui_print("Step 0: Ensuring prerequisites");
ui_print("  [extracting utilities]");
package_extract_dir("utils", "/tmp");
ui_print("  [setting permissions]");
set_perm(0, 0, 0755, "/tmp/mke2fs");
set_perm(0, 0, 0755, "/tmp/tune2fs");
show_progress(0.100000, 0);

ui_print("Step 1: Formatting System");
ui_print("  [ensuring /system is unmounted]");
unmount("/system");
ui_print("  [formatting system]");
run_program("/tmp/mke2fs", "-g", "8184", "-m", "0", "-O", "none,has_journal,filetype", "-L", "system", "-U", "66c79d5f-31a2-42c6-86d9-9fe0d2ec3fe5", "/dev/block/mmcblk1p21");
ui_print("  [disabling fs checking]");
run_program("/tmp/tune2fs", "-c", "0", "-i", "0", "/dev/block/mmcblk1p21");
show_progress(0.200000, 0);

ui_print("Step 2: Installing System");
ui_print("  [mounting /system]");
mount("ext3", "/dev/block/mmcblk1p21", "/system");
ui_print("  [extracting files]");
package_extract_dir("system", "/system");
show_progress(0.300000, 0);

ui_print("Step 3: Installing Preinstall");
ui_print("  [mounting /preinstall]");
mount("ext3", "/dev/block/mmcblk1p23", "/preinstall");
ui_print("  [deleting existing files]");
delete_recursive("/preinstall/tanzanite");
ui_print("  [extracting files]");
package_extract_dir("preinstall", "/preinstall");
show_progress(0.100000, 0);

ui_print("Step 4: Creating Symlinks");
ui_print("  [symlinking busybox]");
symlink("busybox", "/system/xbin/[", "/system/xbin/[[",
        "/system/xbin/arp", "/system/xbin/ash", "/system/xbin/awk",
